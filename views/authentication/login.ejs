<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<header class="card-header jumbo-bg">
					<a href="/signup" class="float-right btn btn-outline-light mt-1">Sign up</a>
					<h4 class="card-title mt-2 text-white">Login</h4>
				</header>
				
				<article class="card-body">
					<form  action="/login" method="POST">
						
						<!--  email/username	-->
						<div class="form-group">
							<label>Email or Username</label>
							<input type="email" class="form-control" name="username">
						</div> <!-- form-group end.// -->

						<!--  Password	-->
						<div class="form-group">
							<label>Password</label>
							<input class="form-control" type="password" name="password">
						</div> <!-- form-group end.// --> 
						
						<!--  Submit button-->
						<div class="form-group">
							<button type="submit" class="btn btn-primary btn-block"> Login </button>
						</div> <!-- form-group// -->
						
						<!--  Forgot password?	-->
				<div class="text-center"><a href="/forgot">I forgot my password</a></div>
						
					</form>
				</article> <!-- card-body end .// -->

					<!--  have account?	-->
				<div class="border-top card-body text-center">Create new account? <a href="/signup">Sign up</a></div>
			</div> <!-- card.// -->
		</div> <!-- col.//-->
	</div> <!-- row.//-->
</div> 
<!--container end.//-->

