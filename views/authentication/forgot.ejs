<div class="container mt-5">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card">
				<header class="card-header jumbo-bg">
					<h4 class="card-title mt-2 text-white">Forgot password ?</h4>
				</header>
				
				<article class="card-body">
					<form  action="/forgot" method="POST">
						
						<!--  Email	-->
						<div class="form-group">
							<label>Please enter your e-mail</label>
							<input type="email" class="form-control" name="email">
						</div> <!-- form-group end.// -->
						
						<!--  Submit button-->
						<div class="form-group">
							<button type="submit" class="btn btn-primary btn-block">Reset Password </button>
						</div> <!-- form-group// -->
												
					</form>
				</article> <!-- card-body end .// -->

					<!--  have account?	-->
				<div class="border-top card-body text-center">Create new account? <a href="/signup">Sign up</a></div>
			</div> <!-- card.// -->
		</div> <!-- col.//-->
	</div> <!-- row.//-->
</div> 
<!--container end.//-->

