<!-- EDIT CAMPGROUND -->

<% include ../partiels/header %>
<% include ../partiels/navbar %>


<div class="container">
	<div class="m-5 pb-3 pt-3 bg-light">
	<h1 style="text-align:center; margin:20px 0">Edit Campground</h1>
	<div class="row">
		<div style="width: 40%; margin:15px auto;">
			
			<!-- TO UPDATE/DELETE :
					- method=  must be POST 
					- action=  .......?_method=PUT 
			-->
			<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST" >
			<!-- <div class=""> -->
			  <div class="form-group">
				<input type="text" class="form-control" name="camp[name]"  placeholder="Campground name" value="<%= camp.name %>">
			  </div>

			  <div class="form-group">
				<input type="text" class="form-control" name="camp[url]"  placeholder="Campground url" value="<%= camp.url %>">
			  </div>
				
				<div class="form-group">
				<textarea class="form-control" name="camp[description]"  placeholder="Campground Description"> <%= camp.description %></textarea>
					
			  </div>

			  <button type="submit" value="Submit" class="btn btn-primary btn-block">Update</button>
				
			</form><!-- Form ends here -->
		</div>
		
	</div><!-- Row ends here -->
	
	<p style="text-align:center; margin-top:20px"><a href="/campgrounds">Go Back</a></p>
	</div>

</div><!-- Container ends here -->



<% include ../partiels/footer %> 