<!-- NavBar -->
<nav class="navbar navbar-expand-lg navbar-dark gradient-bg">
	<a class="navbar-brand" href="/campgrounds">YelpCamp</a>
	<!-- button collapse -->
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
	<div class="collapse navbar-collapse" id="navbarSupportedContent">
		<ul class="navbar-nav ml-auto">
			<% if(!currentUser) {%>
				<li class="nav-item border rounded m-1">  <a class="nav-link  text-white" href="/login">Login</a> </li>
				<li class="nav-item border rounded m-1">  <a class="nav-link  text-white" href="/signup">Sign up</a> </li>
			<% }else{ %>
				<li class="nav-item text-white p-2">  Signed in as <%= currentUser.username %>  </li>
				<li class="nav-item border rounded">  <a class="nav-link text-white" href="/logout">Logout</a> </li>
			<% } %>
		</ul>
		<form  class="form-inline my-2 my-lg-0" action="/campgrounds">
      		<input class="form-control mr-sm-2" type="text" name="search" placeholder="Search">
      		<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    	</form>
	</div>
</nav>

<!-- flash messages -->
<div class="container mt-3">
	<% if(error && error.length > 0) { %>
		<div class="alert alert-danger" role="alert"><%= error %></div>
	<% } else if(success && success.length > 0) { %>
		<div class="alert alert-success" role="alert"><%= success %></div>
	<% } else if(info && info.length > 0) { %>
		<div class="alert alert-dark" role="alert"><%= info %></div>
	<% } %>
</div>